<?xml version="1.0" encoding="UTF-8"?>

<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>Sesionserv</servlet-name>
        <servlet-class>servletHTML.Sesionserv</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Sesionserv</servlet-name>
        <url-pattern>/Sesionserv</url-pattern>
    </servlet-mapping>
     <servlet>
        <servlet-name>servletValida</servlet-name>
        <servlet-class>servletHTML.servletValida</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servletValida</servlet-name>
        <url-pattern>/servletValida</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>